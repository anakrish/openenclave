enclave {
    from "openenclave/edl/logging.edl" import oe_write_ocall;
    from "openenclave/edl/fcntl.edl" import *;
    from "openenclave/edl/poll.edl" import *;    
    from "openenclave/edl/socket.edl" import *;
    from "openenclave/edl/utsname.edl" import *;
    from "openenclave/edl/epoll.edl" import *;
#ifdef OE_SGX
    from "openenclave/edl/sgx/platform.edl" import *;
#else
    from "openenclave/edl/optee/platform.edl" import *;
#endif

    trusted {
        public int enc_main(int argc, [user_check] const char** argv);

        public void enc_enclave_thread (
            uint64_t enc_key);
   };

    untrusted {
        void host_exit(
            int arg);

        void host_create_thread(
            uint64_t enc_key,
            [user_check] oe_enclave_t* enc);

        int host_join_thread(
            uint64_t enc_key);

        int host_detach_thread(
            uint64_t enc_key);
    };
};
